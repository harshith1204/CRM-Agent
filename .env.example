# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017
MONGO_DB=crm
ALLOWED_COLLECTIONS=leads,tasks,notes,call_logs,activity

# Swagger/OpenAPI Backend Configuration
# Replace with your actual CRM API details
SWAGGER_SPEC_URL=https://your-crm.example.com/swagger/v1/swagger.json
SWAGGER_BASE_URL=https://your-crm.example.com
SWAGGER_AUTH_HEADER=Authorization
SWAGGER_AUTH_VALUE=Bearer YOUR_API_TOKEN_HERE

# LLM Provider Configuration
# Options: json_stub, openai
LLM_PROVIDER=json_stub
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini

# Metabase Configuration
METABASE_SITE_URL=https://metabase.example.com
METABASE_USERNAME=your-username@example.com
METABASE_PASSWORD=your-metabase-password
METABASE_SESSION_TOKEN=
METABASE_EMBED_SECRET=your-super-secret-embedding-key

# Optional: Additional security settings
# JWT_SECRET=your-jwt-secret-for-session-management
# CORS_ORIGINS=http://localhost:3000,https://yourdomain.com